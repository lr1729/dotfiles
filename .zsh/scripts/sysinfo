echo '  '$(lscpu | awk '/CPU MHz/{if($NF+0>1000)printf "%.2f GHz\n",$NF/1000; else printf "%.1f MHz\n",$NF}')'   '$(top -bn1 | grep "Cpu(s)" | sed "s/.*, *\([0-9.]*\)%* id.*/\1/" | awk '{print 100 - $1"%"}' )'   '$(free -m | awk '/^Mem/{if($3+$5>1000)printf "%.1f",($3+$5)/1000; else printf "%.2f",($3+$5)/1000}')$(free -m | awk '/^Swap/{if($3>100)printf "+%.1f",$3/1000; else printf ""}')/$(($(free -g | awk '/^Swap/{print $2}') + $(free -g | awk '/^Mem/{print $2}')))G' '
