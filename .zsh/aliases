#
# Command aliases
#
alias cn='screen -r'
alias cf='screen -x'
alias sv='sudo -E nvim'
alias vpc='sudo wg-quick up pi'
alias vpd='sudo wg-quick down pi'
alias mntpi='sudo mount.cifs //192.168.1.87/ling /mnt/pi -o uid=0,nofail,credentials=/home/ling/.smb,iocharset=utf8,noperm'
alias backup='screen -S backup -dm bash  -c "~/.zsh/scripts/backup"'
alias andstart='setsid emulator -avd Pixel_2_API_30'
alias andstart2='setsid emulator -avd Pixel_2_API_28'
alias winstart='virsh -c qemu:///system start win10'
alias winstop='virsh -c qemu:///system shutdown win10'
alias ....='cd ../..'
alias :e=nvim
alias :qa=exit
alias :sp='test -n "$TMUX" && tmux split-window'
alias :vs='test -n "$TMUX" && tmux split-window -h'
alias :wq=exit
alias cd..='cd ..'
alias e=exit
alias f='find . -name'
alias g=git
alias ga='git add'
alias gaa='git add --all'
alias gc='git commit -m'
alias gp='git push'
alias rm='trash'
alias umirror='curl -s "https://archlinux.org/mirrorlist/?country=US&protocol=https&use_mirror_status=on" | sed -e 's/^#Server/Server/' -e '/^#/d' | rankmirrors -n 5 - | sudo dd of=/etc/pacman.d/mirrorlist'
alias h=history
alias diff='diff --color=auto'
alias s=ssh
alias t=tmux
alias v=nvim
alias ls='exa --color=always --group-directories-first'
alias l='ls'
alias ll='exa -la --color=always --group-directories-first --git'

#
# Global aliases
# (work at any position within the command line)
#

alias -g yd='youtube-dl'
