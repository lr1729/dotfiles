#
# Command aliases
#
alias cn='screen -r'
alias cf='screen -x'
alias sv='sudo -E nvim'
alias ....='cd ../..'
alias :e=nvim
alias :qa=exit
alias :sp='test -n "$TMUX" && tmux split-window'
alias :vs='test -n "$TMUX" && tmux split-window -h'
alias :wq=exit
alias cd..='cd ..'
alias e=exit
alias f='find . -name'
alias g=git
alias ga='git add'
alias gaa='git add --all'
alias gc='git commit -m'
alias gp='git push'
function gacp() {
    git add .
    git commit -a -m "$1"
    git push
}
alias h=history
alias l='ls -F'
alias ls='ls --color=auto'
alias diff='diff --color=auto'
alias ll='ls -laF'
alias s=ssh
alias t=tmux
alias v=nvim

#
# Global aliases
# (work at any position within the command line)
#


